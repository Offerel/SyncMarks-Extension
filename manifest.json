{
	"manifest_version": 2,
	"name": "DAVMarks",
	"version": "1.0",
	"description": "Export current bookmarks when Firefox closes",
	"icons": {
		"48": "icons/bookmark.png"
	},
	"homepage_url": "https://github.com/Offerel/davmarks",
	"applications": {
		"gecko": {
			"id": "davmarks@example.org",
			"strict_min_version": "57.0"
		}
	},
	"background": {
		"scripts": ["scripts/background.js"]
	},
	"browser_action": {
		"default_icon": "icons/bookmark.png",
		"default_title": "DAVMarks"
	},
	"options_ui": {
		"page": "options/options.html",
		"browser_style": true
	},
	"permissions": [
		"notifications",
		"tabs",
		"storage",
		"bookmarks",
		"*://*/*",
		"webRequest"
		]
}